<div class="container">
  <div class="booking">
    <% if @bookings.nil? %>
      <p>You have not booked any flight with us. :D</p>
    <% else %>
      <% @bookings.each do |booking| %>
        <div class="row">
          <div class="col l2">
            <div>
              <%= booking.flight.airline %>
            </div>
          </div>
          <div class="col l4">
            <div>
              <%= booking.flight.origin_airport.name_with_state %>
            </div>
            <div>
              <%= booking.flight.departure_datetime %>
            </div>
          </div>
          <div class="col l4">
            <div>
              <%= booking.flight.destination_airport.name_with_state %>
            </div>
            <div>
              <%= booking.flight.arrival_datetime %>
            </div>
          </div>
          <div class="col l1">
            <div>
              <%= booking.passengers.size %><br>
              passenger(s)
            </div>
          </div>
          <div class="col l1">
            <div>
              <% if booking.flight.departure_datetime > Time.now %>
                <span><%= link_to "Manage", edit_booking_path(booking.id) %></span>
                <span><%= link_to "Cancel", booking_path(booking.id), method: :delete %></span>
              <% else %>
                <span>departed</span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>