<div class="container body">
  <div class="row booking">
    
    <div class="col l8" id="passengers">
      <%= render "passengers" %>
    </div>
    
    <div class="col l4">
      <h5>Flight Details</h5>
      
      <%= render "flight_details" %>

      <div class="row">
        <div class="col l5 bold">Booking Number</div>
        <div class="col l7">
          <%= @booking.booking_number %>
        </div>
      </div>

      <h5>Payment</h5>
      
      <div class="row">
        <div class="col l5 bold">Total Amount</div>
        <div class="col l7">NGN <%= @booking.flight.price * @booking.passengers.count %> </div>
      </div>
      <div class="row">
        <div class="col l5 bold"></div>
        <div class="col l7">
          <%= link_to "Make Payment", paypal_url(@booking, payment_bookings_url(@booking.id)), class: "btn" %>
        </div>
      </div>

    </div>
  </div>
</div>