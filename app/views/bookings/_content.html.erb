<div class="" id="passengers">
  <div>
    <h5><%= @booking.flight.airline %>
      <span class="flight-no">Flight NO: <%= @booking.flight.id %></span>
    </h5>
    
    <div class="row">
      <div class="col l5">
        <h5>FROM</h5>
        <div>
          <%= @booking.flight.origin_airport.decorate.name_with_state %> state
        </div>
        <div>
          <%= @booking.flight.decorate.departure_d %>
          <%= @booking.flight.decorate.departure_t %>
        </div>
      </div>
      <div class="col l2"> >>> </div>
      <div class="col l5">
        <h5>TO</h5>
        <div>
          <%= @booking.flight.destination_airport.decorate.name_with_state %> state
        </div>
        <div>
          <%= @booking.flight.decorate.arrival_d %>
          <%= @booking.flight.decorate.arrival_t %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col l7">---------------------------------------------------
      ----------------------------------------------></div>
      <div class="bold col l5">Booking Number: <%= @booking.booking_number %></div>
    </div>
  </div>
  <%= render partial: "bookings/passengers" %>
</div>